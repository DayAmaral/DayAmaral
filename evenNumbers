public class evenNumbers {

	public static void main(String[] args) {
		// Calcular a soma dos numeros pares de 0 a 20;
		//Calculate the sum of even numbers from 0 to 20;
		
	int soma = 0;
	
		for(int i= 0 ; i<=20; i ++) {
			if(i %2 ==0) {
			soma +=i;
		}
	}
		System.out.println("A soma dos números pares é:"+soma);
		

	}

}
